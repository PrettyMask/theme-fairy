<html>
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport">
    <title>Home</title>
</head>
<body>
<section class="posts-out">
    <% page.posts.each(function (post, index) { %>
    <% if (index == 0 || index%3 == 0) { %>
        <article class="post-center">
    <% } else{ %>
            <article class="post-normal">
   <% } %>
            <a class="post-img" href="<%- url_for(post.path)%>" ></a>
            <div class="post-wrap">
                <div class="post-title">
                    <a class="post-title-link" href="<%- url_for(post.path) %>"><%= post.title %></a>
                </div>
                <div class="post-meta">
                    <span class="post-time"><%- date(post.date, "YYYY-MM-DD") %></span>
                </div>
                <div class="post-content-out">
                    <% if (post.excerpt ) {%>
                        <%- post.excerpt %>
                    <% } else { %>
                        <%- post.content %>
                    <% } %>
                </div>
                <div class="read-more">
                    <a href="<%- url_for(post.path)%>" class="read-more-link">
                        <%- __('Post.readMore')%>
                        <i class="iconfont icon-readmore"></i>
                    </a>
                </div>
            </div>
        </article>
    <% }) %>
</section>
<%- partial('_partial/paginator') %>
</body>
</html>
