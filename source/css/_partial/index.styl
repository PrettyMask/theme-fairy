.post-center {
  margin: 0 auto 2em auto;
  background-color: #fff;
  box-shadow: 8px 14px 38px rgba(39,44,49,.06), 1px 3px 8px rgba(39,44,49,.03);
  border-radius 6px
  display flex
  width 100%
  .post-img{
    width 100%
    border-top-left-radius 6px
    border-bottom-left-radius 6px
    background-image: url(post-default)
    background-size 100% 100%
  }
  .post-wrap{
    padding: 30px 50px 10px 50px;
    width 700px;
    display flex
    flex-direction column
  }
  &:hover{
    transition 0.3s
    transform scale(1.01)
  }
}

.post-normal {
  margin 0 auto 2em auto
  background-color: #fff;
  box-shadow: 8px 14px 38px rgba(39,44,49,.06), 1px 3px 8px rgba(39,44,49,.03);
  border-radius 5px
  width 46%
  overflow hidden
  .post-img{
    display inline-block
    width 100%
    height 180px
    background-image: url(post-default)
    border-top-left-radius 6px
    border-top-right-radius 6px
    background-size 100% 100%
  }
  .post-wrap{
    max-height 200px
    padding: 10px 20px 0 20px;
    display flex
    flex-direction column
  }
  &:hover{
    transition 0.3s
    transform scale(1.01)
  }
}

.posts-out  {
  font-family: "Georgia, serif";
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content flex-start
  width 100%
  .post:first-child {
    margin-top: 0;
  }

  .post-title {
    font-weight 600
    font-size: 1.2em;

    .post-title-link {
      color rgba(0, 0, 0, 0.7)
      text-decoration: none;
    }
  }

  .post-content-out {
    max-width: 400px;
    height 200px
    overflow hidden
    color rgba(0, 0, 0, 0.7)
    font-size 0.8em
  }
  .read-more{
    text-align right
    padding 10px 0
    border-top solid 1px rgba(0,0,0,0.1)
    font-size 0.8em
    a {
      width: 100%;
      display: inline-block;
      color: #368CCB;
      text-decoration: none;
    }
    a:hover{
      color #33c8cd
    }
  }
  a {
    color: #368CCB;
    text-decoration: none;
  }
  .post-meta {
    font-size: 0.8em;
    color: #BABABA;
  }
}
