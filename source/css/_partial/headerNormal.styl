.headerNormal {
  width 100%
  height 80px
  background rgba(0, 0, 0, 0.9)
  position relative
  z-index 1
  font-family: "Comic Sans MS",cursive,LiSu,sans-serif;
  .header-outer{
    height 100%
    max-width 960px
    display: flex
    flex-direction row
    justify-content: space-between
    align-items center
    margin 0 auto
    .blog-title{
      text-align: center;
      color: #e2e2e2;
      text-decoration: none;
      font-size 1em
    }
    .menu {
      margin: 0;
      padding: 0;
      font-size 0.8em
      .menu-item {
        display: inline-block;
        margin-right: 10px;
      }
    }
    .menu-item-link {
      color: #e2e2e2;
      text-decoration: none;
      &:hover {
        transition 0.4s
        color: #17c3d2;
      }
    }
  }
}
