.headerNormal {
  width 700px
  height 80px
  margin 0 auto
  position relative
  z-index 1
  box-shadow #3e3e3e
  .header-outer{
    height 100%
    max-width 700px
    display: flex
    flex-direction row
    justify-content: space-between
    align-items center
    margin 0 auto
    .blog-title{
      text-align: center;
      color: #535353;
      text-decoration: none;
      font-size 1em
    }
    .menu {
      margin: 0;
      padding: 0;
      font-size 0.8em
      .menu-item {
        display: inline-block;
        margin-right: 10px;
      }
    }
    .menu-item-link {
      color: #535353;
      text-decoration: none;
      &:hover {
        transition 0.4s
        color: #17c3d2;
      }
    }
  }
}
