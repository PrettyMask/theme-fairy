.post {
  margin: 0 auto 2em auto;
  padding: 30px 50px;
  background-color: #fff;
  box-shadow: 8px 14px 38px rgba(39,44,49,.06), 1px 3px 8px rgba(39,44,49,.03);
  border-radius 5px
}

.posts  {
  .post:first-child {
    margin-top: 0;
  }

  .post-title {
    font-size: 1.5em;

    .post-title-link {
      color: #368CCB;
      text-decoration: none;
    }
  }

  .post-content {
    .read-more{
      padding-top  10px
      border-top solid 1px rgba(0,0,0,0.1)
      a {
        width: 100%;
        display: inline-block;
        color: #368CCB;
        text-decoration: none;
      }
      a:hover{
        color #33c8cd
      }
    }
    a {
      color: #368CCB;
      text-decoration: none;
    }
  }

  .post-meta {
    color: #BABABA;
  }
}
