.headerIndex {
  width 100%
  height 100%
  position relative
  display: flex
  flex-direction row
  z-index 1
  .header-outer{
    font-size 1em
    width 100%
    height 100%
    margin 0 auto
    background rgba(249, 103, 131, 0.2)
    display flex
    justify-content space-between
    flex-direction column;
    align-items center;
    .header-inner{
      font-size 1em
      max-width: 800px;
      width 100%
      height 70%
      margin: 0 auto;
      display: flex
      flex-direction column
      justify-content: center
      align-items center
      .blog-title{
        text-align: center;
        text-decoration: none;
        font-size 2em
        .head-img{
          width 100px
          height 100px
          margin: 0 auto
          border-radius 50%
          overflow hidden
          background url(post-default-normal)
          background-size 100% 100%
        }
        .head-title{
          padding 10px 0
          color #3e3e3e
        }
      }
      .menu {
        margin: 0;
        padding: 0;
        font-size 0.7em
        .menu-item {
          display: inline-block;
          margin-right: 10px;
        }
        .menu-item-link {
          color: #3e3e3e;
          text-decoration: none;
          &:hover {
            transition 0.4s
            color: #17c3d2;
          }
        }
      }
    }
    .bottom{
      color #3e3e3e
    }
  }

}
