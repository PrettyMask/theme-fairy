.header {
  width 100%
  background-image linear-gradient(100deg, #f3bdc2 0%, #ffcaba 50%, #f3bdc2 100%)
  //background-image  url(../images/head-bg.jpeg)
  .header-inner{
    max-width: 960px;
    margin: 0 auto;
    padding: 100px 0 100px 0;
    display: flex
    align-items: baseline
    justify-content: space-between
    .blog-title .logo {
      color: #464646;
      font-size: 2em;
      font-family: "Comic Sans MS",cursive,LiSu,sans-serif;
      text-decoration: none;
    }

    .menu {
      margin: 0;
      padding: 0;

      .menu-item {
        display: inline-block;
        margin-right: 10px;
      }

      .menu-item-link {
        color: #464646;
        text-decoration: none;

        &:hover {
          color: #368CCB;
        }
      }
    }
  }
}
